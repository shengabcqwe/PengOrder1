<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:padding="4dp"
    >
    <ImageView
        android:id="@+id/shopcart_item_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/tudousi"
        android:scaleType="centerCrop" />
    <TextView
        android:id="@+id/shopcart_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="土豆丝"
        android:textSize="16sp"
        android:layout_toRightOf="@id/shopcart_item_img"
        android:layout_marginLeft="5dp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/shopcart_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¥15/份"
        android:layout_below="@id/shopcart_item_name"
        android:layout_alignLeft="@id/shopcart_item_name"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:id="@+id/shopcart_item_pingfen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="评分(10):9.0"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/shopcart_item_price"
        android:layout_alignBottom="@id/shopcart_item_price"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#CCCCCC"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_alignParentRight="true"
        android:padding="4dp"
        >
        <ImageButton
            android:id="@+id/shopcart_item_sub"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/sub"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/shopcart_item_num"
            android:layout_width="40dp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_marginTop="15dp"
            android:textSize="15dp"
            />
        <ImageButton
            android:id="@+id/shopcart_item_add"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/add"
            android:layout_marginTop="11dp"
            />
    </LinearLayout>
</RelativeLayout>