<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:padding="4dp"
    >
    <ImageView
        android:id="@+id/value_item_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/tudousi"
        android:scaleType="centerCrop" />
    <TextView
        android:id="@+id/value_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="土豆丝"
        android:textSize="16sp"
        android:layout_toRightOf="@id/value_item_img"
        android:layout_marginLeft="5dp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/value_item_shuliang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="数量:"
        android:layout_below="@id/value_item_name"
        android:layout_alignLeft="@id/value_item_name"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:id="@+id/value_item_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/value_item_name"
        android:layout_toRightOf="@+id/value_item_shuliang"
        android:layout_marginTop="5dp"
        android:text="1"/>
    <TextView
        android:id="@+id/value_item_pingfen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="评分(10):"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/value_item_num"
        android:layout_alignBottom="@id/value_item_num"
        />
    <TextView
        android:id="@+id/value_item_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/value_item_pingfen"
        android:layout_alignBottom="@id/value_item_num"
        android:text="10"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#CCCCCC"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_alignParentRight="true"
        android:padding="4dp"
        >
       <Button
           android:id="@+id/value_button"
           android:layout_width="match_parent"
           android:layout_height="45dp"
           android:text="评价"
           android:textColor="#df1111"
           />
    </LinearLayout>
</RelativeLayout>